<Window
    x:Class="TestWpfProject.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="About"
    Width="400"
    Height="200"
    WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                FontSize="18"
                FontWeight="Bold"
                Text="My Test App"
                TextAlignment="Center" />
            <TextBlock
                Margin="0,5,0,0"
                FontSize="12"
                Foreground="Gray"
                Text="version 1.0"
                TextAlignment="Center" />
            <TextBlock
                Margin="0,10,0,0"
                FontSize="12"
                Text="Developed by"
                TextAlignment="Center" />
            <TextBlock
                Cursor="Hand"
                FontSize="12"
                Foreground="Blue"
                Text="Mefji"
                TextAlignment="Center">
                <TextBlock.TextDecorations>
                    <TextDecoration Location="Underline" />
                </TextBlock.TextDecorations>
            </TextBlock>
            <Button
                Width="60"
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Click="OkButton_Click"
                Content="OK" />
        </StackPanel>
    </Grid>
</Window>
